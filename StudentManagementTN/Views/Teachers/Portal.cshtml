@model StudentManagementTN.Models.Teacher

@{
    ViewBag.Title = "Portal";
}

<h2>Teacher</h2>
<hr />

@Html.ActionLink("Logout", "Logout", new { area = "" }, new { @class = "btn btn-outline-danger" })

<div>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ClassDivision.Classno)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassDivision.Classno)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ClassDivision.Division)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassDivision.Division)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Contact)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Contact)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

    </dl>
</div>

<h4 class="text-center">Class @Model.ClassDivision.Combined : Student List</h4>
<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Education Status
        </th>
        <th>
            Address
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ClassDivision.Students)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EduStatus.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
        </tr>
    }

</table>

